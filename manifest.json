{
  "manifest_version": 3,
  "name": "CloudFlare ImgBed 上传器",
  "version": "1.0.0",
  "description": "右键上传图片到 CloudFlare ImgBed 图床",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "clipboardRead",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["notification.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CloudFlare ImgBed 配置"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}